<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Underwriting</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bb">
    <p><span style="font-size:30px;cursor:pointer" id="myMenu" onclick="openNav()">&#9776; </span></p>
    <div class="sidenav" id="MySideNav">
        <input type="hidden" name="company_id" id="company_id" value="<%= company_id %>">
        <a href="/portfolio">Companies</a>
        <a href="/portfolio?company=<%= company_id %>">Portfolio</a>
        <a href="/underwriting?company=<%= company_id %>">UW Data</a>
        <a href="/claims?company=<%= company_id %>">Claims</a>
    </div>
    <div class="container">
<h1><%= company_name %> </h1>
        <table class="table">
        <thead>
            <tr>
                <th>CHAT GPT: SWOT Analysis</th>
            </tr>
        </thead>
        <tbody>
            <% swots.forEach(swot => { %>
                    <tr>
                        <td><%= swot.text %></td>
                    </tr>
                <% }); %>
        </tbody>
</table>
    </div>
</body>
    <script>
        function openNav() {
        document.getElementById("MySideNav").style.width = "250px";
    }

    window.addEventListener('click', function (e) {
        if (!document.getElementById('MySideNav').contains(e.target) && !document.getElementById('myMenu').contains(e.target)) {
            document.getElementById("MySideNav").style.width = "0px";
        }
    });
	
        </script>
</html>
